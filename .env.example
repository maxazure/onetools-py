# OneTools Python 环境变量配置示例
# 复制此文件为 .env 并根据实际情况修改配置

# 应用设置
APP_NAME=OneTools
APP_VERSION=2.0.0
ENVIRONMENT=development
DEBUG=true

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=15008
SERVER_RELOAD=true
SERVER_WORKERS=1

# SQL Server 数据库配置
SQLSERVER_HOST=localhost\SQLEXPRESS
SQLSERVER_PORT=1433
SQLSERVER_DATABASE=OneToolsDb
SQLSERVER_TRUSTED_CONNECTION=true
SQLSERVER_USERNAME=
SQLSERVER_PASSWORD=

# SQLite 配置数据库
SQLITE_PATH=data/onetools.db

# 数据库连接池配置
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=console
LOG_FILE_PATH=logs/onetools.log
LOG_MAX_FILE_SIZE=10MB
LOG_BACKUP_COUNT=5

# 启用的模块
ENABLED_MODULES=user_query,transaction_query,custom_query,dynamic_query

# 模块缓存配置
MODULE_CACHE_ENABLED=true
MODULE_CACHE_TTL=300

# 安全配置
SECRET_KEY=onetools-development-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# SQL 安全设置
SQL_WHITELIST_ENABLED=true
SQL_MAX_QUERY_LENGTH=10000
SQL_BLOCKED_KEYWORDS=DROP,DELETE,TRUNCATE,ALTER,CREATE,INSERT,UPDATE

# CORS 配置
CORS_ORIGINS=*
CORS_METHODS=*
CORS_HEADERS=*

# 其他设置
HOT_RELOAD_ENABLED=true